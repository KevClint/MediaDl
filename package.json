{
  "name": "ytdl",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.yourname.ytdl",
    "productName": "Video Downloader",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Video Downloader"
    },
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "tools/",
        "to": "tools/",
        "filter": ["**/*"]
      }
    ]
  }
}